{
    "printWidth": 120,
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "*.{css,scss}",
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        },
        {
            "files": "*.html",
            "options": {
                "singleQuote": false
            }
        }
    ]
}
